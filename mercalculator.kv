#:kivy 2.3.0

<Mercalculator>:
    eval_x: eval_x
    clear: clear
    output: output
    numor1: numor1
    denor1: denor1
    numor2: numor2

    GridLayout:
        id: table
        cols: 2
        size: root.width - 10, root.height/3
        center: root.center_x, root.center_y

        TextInput:
            id: numor1
            hint_text: "Numerator 1"
            input_type: "number"
            multiline: False
            halign: "center"
            font_size: self.height * 1/3
            padding: 0, self.height * 1/3, 0,0

        TextInput:
            id: numor2
            hint_text: "Numerator 2"
            input_type: "number"
            multiline: False
            halign: "center"
            font_size: self.height * 1/3
            padding: 0, self.height * 1/3, 0, 0

        TextInput:
            id: denor1
            hint_text: "Denominator 1"
            input_type: "number"
            multiline: False
            halign: "center"
            font_size: self.height * 1/3
            padding: 0, self.height * 1/3, 0, 0

        Label:
            id: output
            halign: "center"
            valign: "center"
            font_size: self.height * 1/3
            text: "?"

    Button:
        id: eval_x
        center: root.center_x, (root.height - table.height)/4
        font_size: self.width * self.height / ((self.width + self.height) / 2) ** 2 * min(self.width, self.height)
        text: "X"
        size: root.width * 2/7, root.height/9

    Button:
        id: clear
        center: eval_x.center_x + eval_x.width, (root.height - table.height)/4
        font_size: self.width * self.height / ((self.width + self.height) / 2) ** 2 * min(self.width, self.height)
        text: "C"
        size: root.width * 2/7, root.height/9